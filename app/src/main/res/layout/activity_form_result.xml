<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/formresult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_mode"
    android:padding="20dp"
    tools:context=".FormResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/light_mode1"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hasil Form"
                    android:textSize="25sp"
                    android:textColor="@color/light_mode2"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <!-- Name -->
                <TextView
                    android:id="@+id/tvNameFR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama:"
                    android:textSize="18sp"
                    android:textColor="@color/light_mode2"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="8dp" />

                <!-- Address -->
                <TextView
                    android:id="@+id/tvAddressFR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat:"
                    android:textSize="18sp"
                    android:textColor="@color/light_mode2"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="8dp" />

                <!-- Number -->
                <TextView
                    android:id="@+id/tvNumberFR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nomor HP:"
                    android:textSize="18sp"
                    android:textColor="@color/light_mode2"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="8dp" />

                <!-- Religion -->
                <TextView
                    android:id="@+id/tvReligionFR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agama:"
                    android:textSize="18sp"
                    android:textColor="@color/light_mode2"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="8dp" />

                <!-- Gender -->
                <TextView
                    android:id="@+id/tvGenderFR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin:"
                    android:textSize="18sp"
                    android:textColor="@color/light_mode2"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="8dp" />

                <!-- Hobbies -->
                <TextView
                    android:id="@+id/tvHobbiesFR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hobi:"
                    android:textSize="18sp"
                    android:textColor="@color/light_mode2"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
