<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_mode3"
    tools:context=".ExitActivity">

    <LinearLayout
        android:id="@+id/llExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvExit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/light_mode"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- CLOSE ICON -->
                <ImageView
                    android:id="@+id/btnClose"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="end"
                    android:src="@drawable/close"
                    android:layout_marginBottom="10dp" />

                <!-- TITLE -->
                <TextView
                    android:id="@+id/tvExit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/konfirmasi"
                    android:textSize="22sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/light_mode2"
                    android:layout_gravity="center" />

                <!-- DESCRIPTION -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/konfirmasi2"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/light_mode6"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="22dp" />

                <!-- BUTTON KELUAR -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnKeluar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:backgroundTint="@color/light_mode1"
                    android:text="@string/keluar2"
                    android:textSize="16sp"
                    android:textColor="@color/light_mode2"
                    android:fontFamily="@font/poppins_medium" />

                <!-- BUTTON BATAL -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBatal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    app:backgroundTint="@color/light_mode3"
                    android:text="@string/batal"
                    android:textSize="16sp"
                    android:textColor="@color/light_mode2"
                    android:fontFamily="@font/poppins_regular" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
